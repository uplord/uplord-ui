{
  "name": "uplord-ui",
  "version": "0.1.13",
  "description": "A modern, reusable React UI library.",
  "type": "module",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "components",
    "styles"
  ],
  "sideEffects": [
    "**/*.scss"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs.js",
      "import": "./dist/index.es.js"
    },
    "./components": {
      "types": "./dist/components.d.ts",
      "require": "./dist/components.cjs.js",
      "import": "./dist/components.es.js"
    },
    "./lib": {
      "types": "./dist/lib.d.ts",
      "require": "./dist/lib.cjs.js",
      "import": "./dist/lib.es.js"
    },
    "./dist/uplord-ui.css": "./dist/uplord-ui.css",
    "./styles/forward": {
      "sass": "./dist/styles/forward.scss"
    },
    "./package.json": "./package.json"
  },
  "typesVersions": {
    "*": {
      "*": [
        "dist/*"
      ]
    }
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "build-vite": "npx vite build && node scripts/copy-scss.js",
    "release": "standard-version"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "formik": "^2.4.6",
    "framer-motion": "^12.6.3",
    "next": "15.3.4",
    "next-themes": "^0.4.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-responsive": "^10.0.1",
    "storybook-addon-pseudo-states": "^9.0.12",
    "stylelint-config-idiomatic-order": "^10.0.0",
    "yup": "^1.6.1"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.1",
    "@ebay/nice-modal-react": "^1.2.13",
    "@eslint/eslintrc": "^3",
    "@storybook/addon-a11y": "^9.0.12",
    "@storybook/addon-docs": "^9.0.12",
    "@storybook/addon-onboarding": "^9.0.12",
    "@storybook/addon-styling-webpack": "^2.0.0",
    "@storybook/nextjs": "^9.0.12",
    "@storybook/preset-scss": "^1.0.3",
    "@svgr/webpack": "^8.1.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.5.2",
    "chromatic": "^13.0.1",
    "clsx": "^2.1.1",
    "css-loader": "^7.1.2",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "eslint-plugin-storybook": "^9.0.12",
    "lint-staged": "^15.4.3",
    "lucide-react": "^0.474.0",
    "prettier": "^3.4.2",
    "sass": "^1.86.2",
    "sass-loader": "^16.0.5",
    "standard-version": "^9.5.0",
    "storybook": "^9.0.12",
    "storybook-addon-sass-postcss": "^0.3.2",
    "style-loader": "^4.0.0",
    "stylelint": "^16.20.0",
    "stylelint-config-standard-scss": "^15.0.1",
    "stylelint-order": "^7.0.0",
    "stylelint-scss": "^6.12.0",
    "typescript": "^5",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-svgr": "^4.3.0",
    "zod": "^3.24.1"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": "prettier --write",
    "*.scss": [
      "prettier --write",
      "stylelint --fix"
    ],
    "*.html": "prettier --write"
  }
}
